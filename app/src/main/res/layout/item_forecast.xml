<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="forecastData"
            type="com.android.dvtweatherapp.domain.weather.ForecastDisplayData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_horizontal_forecast_item"
        android:paddingVertical="@dimen/padding_vertical_forecast_item"
        tools:background="@color/green">

        <TextView
            android:id="@+id/tv_week_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="@{forecastData.weekDay}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_week_day"
            tools:text="Monday" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weatherSrc="@{forecastData.weatherType}"
            tools:src="@drawable/ic_clear" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:itemTemperatureText="@{forecastData.temperatureData.maxTemperature}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_week_day"
            android:textStyle="bold"
            tools:text="25Â°" />

    </LinearLayout>
</layout>