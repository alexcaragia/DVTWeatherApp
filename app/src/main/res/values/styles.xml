<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CurrentWeatherImage">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CurrentTemperatureText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_current_temperature</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentWeatherNameText">
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:padding">@dimen/padding_default_text_view</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_current_weather</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>